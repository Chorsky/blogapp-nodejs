{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar categoria: </h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categorias/edit" method="POST">
        <input type="hidden" value="{{categoria._id}}" name="id">
        <label for="nome" class="form-label">Nome: </label>
            <input type="text" class="form-control" value="{{categoria.nome}}" name="nome" placeholder="Digite o nome da categoria"><br>
        <label for="slug" class="form-label">Slug: </label>
            <input type="text" class="form-control" id="slug" value="{{categoria.slug}}" name="slug" placeholder="Slug da categoria"><br>
        <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>