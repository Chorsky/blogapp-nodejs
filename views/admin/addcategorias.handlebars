{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova categoria: </h3>
<div class="card">
  <div class="card-body">
    <form action="nova" method="POST">
        <label for="nome" class="form-label">Nome: </label>
            <input type="text" class="form-control" name="nome" placeholder="Digite o nome da categoria"><br>
        <label for="slug" class="form-label">Slug: </label>
            <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria"><br>
        <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>