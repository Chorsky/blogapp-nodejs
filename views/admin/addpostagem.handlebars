{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}


<div class="card">
  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="/admin/postagens/nova" method="POST">
        <label for="nome" class="form-label">Título: </label>
            <input type="text" class="form-control" name="titulo" placeholder="Digite o título da postagem" ><br>        

        <label for="slug" class="form-label">Slug: </label>
            <input type="text" class="form-control" id="slug" name="slug" placeholder="Digite slug da postagem" ><br>            

        <label for="slug" class="form-label">Descrição: </label>
            <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Digite a descrição da postagem" ><br>            

        <label for="slug" class="form-label">Conteúdo: </label>
            <textarea class="form-control" name="conteudo" id="conteudo" cols="30" rows="10"  ></textarea><br>            

        <label for="slug" class="form-label">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select" >
                <option value="">Selecione uma categoria</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}    
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
        <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
    </form>
  </div>
</div>
