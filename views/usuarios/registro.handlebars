{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body mt-2">
        <h3>Crie sua conta: </h3>
        <form action="/usuarios/registro" method="post">

            <label for="nome" class="form-label">Nome: </label>
            <input type="text" class="form-control" name="nome">

            <label for="email" class="form-label">Email: </label>
            <input type="email" class="form-control" name="email">

            <label for="senha" class="form-label">Senha: </label>
            <input type="password" class="form-control" name="senha">

            <label for="senha2" class="form-label">Repita sua senha: </label>
            <input type="password" class="form-control" name="senha2"><br>
            <button type="submit" class="btn btn-success">Cria sua conta</button>
        </form>
    </div>
</div>